
def sum_and_avg(t):
    s = 0
    for i in t:
        s += i
    a = s/int(len(t))
    return(s, a,)
# see that the type( of the function is <tuple>)
print('--------------------------------------')
print('This is the value of the Tuple returned')
#(sum, avg) = sum_and_avg(3, 16, 7,)
my_tuple = (2,6,42)
x = sum_and_avg(my_tuple)
print(x)
sum = x[0]
avg = x[1]
print('Sum =', sum)
print('Sum is of type',type(sum))
print('Avg =', avg)
print('Avg is of type',type(avg))

